<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- design for button when pressed, when focused and then at normal state -->

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/blue2" android:startColor="@color/blue25" />

            <!-- <stroke android:width="1dp" android:color="@color/grey05" /> -->

            <corners android:radius="6dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/white2" android:startColor="@color/white1" />

            <!-- <stroke android:width="1dp" android:color="@color/grey05" /> -->

            <corners android:radius="6dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/white2" android:startColor="@color/white1" />

            <!-- <stroke android:width="1dp" android:color="@color/grey05" /> -->

            <corners android:radius="6dp" />
        </shape></item>

</selector>